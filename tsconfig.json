{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"],
      "@templates/*": ["./templates/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.d.ts", "**/*.ts", "**/*.tsx", "templates/gm-template/typings.d.ts", ".next/types/**/*.ts", ".next/dev/types/**/*.ts"],
  "exclude": [
    "node_modules",
    ".next/**/*",
    "templates/gm-template/helpers.ts",
    "templates/gm-template/main.ts",
    "templates/gm-template/rules.ts",
    "templates/gm-template/scripts.ts"
  ]
}
